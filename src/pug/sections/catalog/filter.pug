mixin row(checkboxName, title)
  //begin row
  .catalog-filter__item-row
    .catalog-filter__item-row-inn
      label.catalog-filter__item-label
        .input-checkbox
          input(type="checkbox" name=checkboxName)
          span
        .b-m-sb= title
  //end row

