mixin slide()
  .gallery-slider__slide.swiper-slide
    picture
      source(media="(min-width: 1024px)", srcset="assets/img/gallery/gallery-01@2x.jpg")
      source(srcset="assets/img/gallery/gallery-01.jpg")
      img(src="assets/img/gallery/gallery-01.jpg", alt="Image")
mixin slide2()
  .gallery-slider__slide.swiper-slide
    picture
      source(media="(min-width: 1024px)", srcset="assets/img/product-top@2x.jpg")
      source(srcset="assets/img/product-top.jpg")
      img(src="assets/img/product-top.jpg", alt="Image")

