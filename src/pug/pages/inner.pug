mixin inner-mixin__item(bgImg, itemTitle, newclass)
  //-.inner-mixin__item(style="height: 200px; width: 18%; border: 1px solid #693;text-align:center;display:inline-block;")
  .inner-mixin__item
    .inner-mixin__pic(style= 'background-image:url(assets/img/' + bgImg + '.png);')
    div(class='services__icon services__icon--' + newclass + '')
